@{
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}

<div class="row" style="margin-top:120px">
    <div class="col-md-12">
        @*<img class="center-block" src="~/images/logo_t.png" />*@
        <img class="center-block" src="~/images/logonew.jpg" style="height:120px;" />
        <div class="center-block box-login" style="margin-top:30px;">



        <div class="row"></div>
            <h3 class="text-center">ล็อกอินเข้าสู่ระบบ</h3>
            <br/>
            <form role="form">
                <div class="form-group input-group">
                    <span class="input-group-addon">
                        <i class="fa fa-user" style="font-size:17px"></i>
                    </span>
                    <input id="uname" type="text" class="form-control" placeholder="ผู้ใช้งาน">
                </div>
                <div class="form-group input-group">
                    <span class="input-group-addon">
                        <i class="fa fa-key"></i>
                    </span>
                    <input id="upwd" type="password" class="form-control" placeholder="รหัสผ่าน">
                </div>

                <button class="btn btn-default btn-panel-yellow pull-left" type="button" style="width:120px" onclick="location.href='@Url.Action("RegisterMember", "Home")'">สมัครสมาชิก</button>
                <button class="btn btn-default btn-panel-yellow pull-right" type="submit" style="width:120px" onclick="login();" formaction='javascript:login();'>เข้าสู่ระบบ</button>
                <div id="waitBtnConfirm" style="display:none;position:absolute;top:354px;text-align:center;height:34px;width:260px;background-color:#FFC000;z-index:11;border-radius:5px;">
                    <i class="fa fa-refresh fa-spin fa-2x" style="margin-top:3px;color:gray;" aria-hidden="true"></i>
                </div>
                <div class="pull-right">
                    <br/>
                    <a href="" style="color:white" onclick="forgetPwd();">ลืมรหัสผ่าน</a>
                </div>
            </form>
            <br/>
            



        </div>
    </div>
</div>

<!-- Modal -->
<div class="modal fade modalForm1" id="loginModal" tabindex="-1" role="dialog" aria-labelledby="loginModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div id="loginModalHeader" class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true" style="vertical-align:middle;top:15px">&times;</button>
                <h4 class="modal-title" id="loginModalLabel" style="vertical-align:middle;">ล็อกอินเข้าสู่ระบบ</h4>
            </div>
            <div class="modal-body container-fluid">
                <div id="loginMsg" style="color:red;">กรุณากรอกข้อมูลให้ครบถ้วน</div>
                <br />

                <div class="pull-right" style="margin-top:-2px;">
                    <div class="btn btn-default btn-panel-yellow" data-dismiss="modal" aria-hidden="true">&nbsp;&nbsp;&nbsp;ปิด&nbsp;&nbsp;&nbsp;</div>
                </div>
            </div>
        </div>
    </div>
</div>
