@model IEnumerable<PPcore.ViewModels.member.SecurityMemberRolesViewModel>
@{
    Layout = null;
}



<table class="table table-striped table-bordered table-hover" id="a_table">
    <thead>
        <tr>
            <th style="width:180px;">@Html.DisplayNameFor(model => model.mem_username)</th>
            <th style="display:none">@Html.DisplayNameFor(model => model.memberId)</th>
            <th>@Html.DisplayNameFor(model => model.email)</th>
            <th style="width:120px;">@Html.DisplayNameFor(model => model.LoggedInDate)</th>
            <th style="width:120px;">@Html.DisplayNameFor(model => model.CreatedDate)</th>
            <th style="width:120px;">@Html.DisplayNameFor(model => model.CreatedByUserName)</th>
            <th style="width:120px;">@Html.DisplayNameFor(model => model.EditedDate)</th>
            <th style="width:120px;">@Html.DisplayNameFor(model => model.EditedByUserName)</th>
            <th style="width:100px;">@Html.DisplayNameFor(model => model.Status)</th>
            <th style="width:100px;">รีเซตรหัสผ่าน</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.mem_username)</td>
                <td style="display:none">@Html.DisplayFor(modelItem => item.memberId)</td>
                <td>@Html.DisplayFor(modelItem => item.email)</td>
                <td>@Html.DisplayFor(modelItem => item.LoggedInDate)</td>
                <td>@Html.DisplayFor(modelItem => item.CreatedDate)</td>
                <td>@Html.DisplayFor(modelItem => item.CreatedByUserName)</td>
                <td>@Html.DisplayFor(modelItem => item.EditedDate)</td>
                <td>@Html.DisplayFor(modelItem => item.EditedByUserName)</td>
                <td style="text-align:center">
                    @if (item.Status == "Y")
                    {
                        <button id="status-@Html.DisplayFor(modelItem => item.memberId)" class="btn btn-xs btn-panel-green-attended" type="button" onclick="suspendClick('@Html.DisplayFor(modelItem => item.memberId)');">
                            &nbsp;<i class='fa fa-check-square-o' aria-hidden='true'></i> ใช้งาน&nbsp;
                        </button>
                    }
                    else
                    {
                        <button id="status-@Html.DisplayFor(modelItem => item.memberId)" class="btn btn-xs btn-panel-red" type="button" onclick="suspendClick('@Html.DisplayFor(modelItem => item.memberId)');">
                            <i class='fa fa-square-o' aria-hidden='true'></i> ระงับการใช้งาน
                        </button>
                    }
                </td>
                <td>
                    <button id="reset-@Html.DisplayFor(modelItem => item.memberId)" class="btn btn-xs btn-panel-yellow" type="button" onclick="resetPasswordClick('@Html.DisplayFor(modelItem => item.memberId)','@Html.DisplayFor(modelItem => item.mem_username)','@Html.DisplayFor(modelItem => item.email)');">
                         รีเซตรหัสผ่าน
                    </button>
                </td>
            </tr>
        }
    </tbody>
</table>

