@{
    Layout = "";
}
@model IEnumerable<PPcore.Models.product>

<div class="panel panel-blue">
    <div class="panel-heading">
        <div class="pull-left" style="margin-top:-2px;">
            <form class="form-inline" role="form">
                <select id="product_group" class="form-control" asp-items="@ViewBag.product_group" style="width:150px;"></select>
                <select id="product_type" class="form-control" style="width:150px;"></select>
                <div class="form-group input-group" style="width:200px;">
                    <input id="searchPattern" type="text" class="form-control" placeholder="คำค้นหา">
                    <span class="input-group-btn">
                        <button class="btn btn-default" type="button" onclick="mem_productProductSearch();">
                            <i class="fa fa-search"></i>
                        </button>
                    </span>
                </div>
            </form>
        </div>
        @if (ViewBag.IsMember != 1)
        {
            <div class="pull-right" style="margin-top:-2px;">
                <div id="btnCreateProduct" class="btn btn-default btn-panel-yellow" onclick="mem_productProductCreateGet('@ViewBag.memberId')">&nbsp;<i class="fa fa-file" aria-hidden="true" style="color:white;"></i>&nbsp;&nbsp;&nbsp;เพิ่ม&nbsp;&nbsp;&nbsp;&nbsp;</div>
                <div id="btnEditProduct" class="btn btn-default btn-panel-yellow">&nbsp;<i class="fa fa-pencil-square-o" aria-hidden="true" style="color:white;"></i>&nbsp;แก้ไข&nbsp;&nbsp;</div>
            </div>
        }
    </div>
    <!-- /.panel-heading -->
    <div class="panel-body">
        <div class="dataTable_wrapper" style="padding-right:10px;">
            <table class="table table-striped table-bordered table-hover dataTablesMod" id="dataTablesProductDetailsAsTableList">
                <thead>
                    <tr>
                        <th class="text-center">@Html.DisplayNameFor(model => model.rec_no)</th>
                        <th class="text-center">@Html.DisplayNameFor(model => model.product_code)</th>
                        @*<th>@Html.DisplayNameFor(model => model.product_group_desc)</th>
                            <th>@Html.DisplayNameFor(model => model.product_type_desc)</th>*@
                        <th>@Html.DisplayNameFor(model => model.product_desc)</th>
                        <th>เลือก</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="text-center">@Html.DisplayFor(modelItem => item.rec_no)</td>
                            <td class="text-center">@Html.DisplayFor(modelItem => item.product_code)</td>
                            @*<td>@Html.DisplayFor(modelItem => item.product_group_desc)</td>
                                <td>@Html.DisplayFor(modelItem => item.product_type_desc)</td>*@
                            <td>@Html.DisplayFor(modelItem => item.product_desc)</td>
                            <td></td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>











    </div>
</div>
