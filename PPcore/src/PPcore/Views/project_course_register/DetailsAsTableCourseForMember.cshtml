@model IEnumerable<PPcore.ViewModels.project_course_register.memberRegisterViewModel>
@{
    Layout = null;
}

<table class="table table-striped table-bordered table-hover" id="a_table">
    <thead>
        <tr>
            <th style="width:15px;">ลำดับ</th>
            <th style="display:none">@Html.DisplayNameFor(model => model.project_course.id)</th>
            <th style="display:none">@Html.DisplayNameFor(model => model.project_course.course_code)</th>
            <th style="display:none">@Html.DisplayNameFor(model => model.project_course.project_code)</th>
            <th>@Html.DisplayNameFor(model => model.project_course.course_desc)</th>
            <th style="width:70px;">@Html.DisplayNameFor(model => model.project_course.course_begin)</th>
            <th style="width:70px;">@Html.DisplayNameFor(model => model.project_course.course_end)</th>
            <th style="width:80px;">ลงทะเบียน</th>
        </tr>
    </thead>
    <tbody>
        @{ var countOrder = 0;}
        @foreach (var item in Model)
        {
            countOrder++;
            <tr>
                <td style="width:15px;">@countOrder</td>
                <td style="display:none">@Html.DisplayFor(modelItem => item.project_course.id)</td>
                <td style="display:none">@Html.DisplayFor(modelItem => item.project_course.course_code)</td>
                <td style="display:none">@Html.DisplayFor(modelItem => item.project_course.project_code)</td>
                <td>@Html.DisplayFor(modelItem => item.project_course.course_desc)</td>
                <td>@Html.DisplayFor(modelItem => item.project_course.course_begin)</td>
                <td>@Html.DisplayFor(modelItem => item.project_course.course_end)</td>
                <td>
                    @if (item.IsRegistered)
                    {
                        <button id="cell-@Html.DisplayFor(modelItem => item.project_course.id)" class="btn btn-xs btn-panel-green-attended" type="button" onclick="unattendClick('@ViewBag.cId','@Html.DisplayFor(modelItem => item.project_course.id)','@Html.DisplayFor(modelItem => item.project_course.course_desc)');">
                            <i class='fa fa-check-square-o' aria-hidden='true'></i> ลงชื่อแล้ว
                        </button>
                    }
                    else
                    {
                        <button id="cell-@Html.DisplayFor(modelItem => item.project_course.id)" class="btn btn-xs btn-panel-yellow" type="button" onclick="attendClick('@ViewBag.cId','@Html.DisplayFor(modelItem => item.project_course.id)','@Html.DisplayFor(modelItem => item.project_course.course_desc)');">
                            <i class='fa fa-square-o' aria-hidden='true'></i> ลงชื่อเข้าอบรม
                        </button>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>

