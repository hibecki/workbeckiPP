    <div class="panel-body">
        <div class="dataTable_wrapper" style="padding-right:10px;">
            <table class="table table-striped table-bordered table-hover dataTablesMod" id="b_table">
                <thead>
                    <tr>
                        <th style="width:75px;"><div class="checkbox"><label>เลือกทั้งหมด<br/><input type="checkbox" id="cAll" onclick="checkboxAll()"></label></div></th>
                        <th style="width:13px;">ลำดับ</th>
                        <th style="display:none">@Html.DisplayNameFor(model => model.id)</th>
                        <th style="width:70px;">รหัส<br/>ผู้สนับสนุน</th>
                        <th style="width:100px;">งบประมาณ</th>
                        <th>@Html.DisplayNameFor(model => model.contactor)</th>
                        <th>@Html.DisplayNameFor(model => model.contactor_detail)</th>
                    </tr>
                </thead>
                <tbody>
                    @{ var countOrder = 0;}
                    @foreach (var item in Model)
                    {
                        countOrder++; 
                        <tr>
                            <td><div class="checkbox"><label><input type="checkbox" id="c-@Html.DisplayFor(modelItem => item.id)" onclick="checkboxClick('@Html.DisplayFor(modelItem => item.id)')"></label></div></td>
                            <td>@countOrder</td>
                            <td style="display:none">@Html.DisplayFor(modelItem => item.id)</td>
                            <td>@Html.DisplayFor(modelItem => item.spon_code)</td>
                            <td><input class="form-control" style="width:100px;" id="i-@Html.DisplayFor(modelItem => item.id)" readonly onkeypress="return event.charCode >= 48 && event.charCode <= 57" maxlength="9" /></td>
                            <td>@Html.DisplayFor(modelItem => item.contactor)</td>
                            <td>@Html.DisplayFor(modelItem => item.contactor_detail)</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

    </div>


