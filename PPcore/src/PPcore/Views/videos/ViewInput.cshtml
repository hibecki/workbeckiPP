@model PPcore.Models.album

<div class="row">

    <div class="col-md-2">
        <form asp-action="@ViewBag.FormAction">
            <div class="form-horizontal">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input asp-for="rowversion" />
                <input asp-for="album_code" /><input asp-for="album_type" /><input asp-for="created_by" />
                <div class="form-group">
                    <div class="row col-md-offset-1">
                        <label asp-for="album_name" class="control-label"></label>
                        <input asp-for="album_name" class="form-control" maxlength="100" />
                        <span asp-validation-for="album_name" class="text-danger" />
                    </div>
                    <div class="row col-md-offset-1">
                        <label asp-for="album_desc" class="control-label"></label>
                        <textarea asp-for="album_desc" class="form-control" rows="3" maxlength="200" style="resize:none;"></textarea>
                        <span asp-validation-for="album_desc" class="text-danger" />
                    </div>
                    <div class="row col-md-offset-1">
                        <label asp-for="album_date" class="control-label"></label>
                        <div class="input-group">
                            <input asp-for="album_date" class="form-control" readonly>
                            <span class="input-group-btn">
                                <button id="album_dateButton" class="btn btn-default" type="button" style="border-color:orangered;">
                                    <i class="fa fa-calendar"></i>
                                </button>
                            </span>
                        </div>
                        <span asp-validation-for="album_date" class="text-danger" />
                    </div>
                    <div class="row col-md-offset-1">
                        <br />
                        <button id="btnSave" type="submit" class="btn btn-default btn-panel-yellow">&nbsp;<i class="fa fa-floppy-o" aria-hidden="true" style="color:white;"></i>&nbsp;&nbsp;จัดเก็บ&nbsp;&nbsp;</button>
                    </div>
                </div>


            </div>
        </form>
    </div>


    <div class="col-md-10">
        <form action="@Url.Action("UploadAlbumVideo", "videos", new {albumCode=ViewBag.album_code})" class="dropzone">
            <div class="dz-message pull-left" data-dz-message>
                <div style="background-color:#ffC000;height:290px;width:80px;left:40px;top:25px;position:absolute;border-radius:5px;">
                    <i class="fa fa-plus-square-o txt-color-blue" aria-hidden="true" style="position:relative;left:-1px;top:20px;font-size:50px;"></i>
                </div>
            </div>
            <div class="dz-message" data-dz-message>
                <span style="font-size:20px;">เพิ่มคลิปวีดีโอ</span>
            </div>
        </form>
    </div>


</div>
<br />
@if (ViewBag.FormAction == "Edit")
{
    <div class="row">
        <div class="col-md-12">
            <div id="albumPanel" class="well" style="padding-left:10px;padding-top:0px;">
                <div id="isMarkAll" style="display:none">0</div>
                <div class="video-mark" style="position:relative;width:100%" onclick="markAllVideo();">&nbsp;<br/>&nbsp;
                    <div style="position:absolute;top:0px;right:3px;width:120px;">
                        <div style="position:absolute;left:5px;top:8px;"><div id="markAllVideo" aria-hidden="true" style="font-size:28px;"><i class="fa fa-square-o" aria-hidden="true"></i></div></div>
                        <div style="position:absolute;left:35px;top:15px;"><div style="font-size:16px;">เลือกทั้งหมด</div></div>
                    </div>
                    <br/>
                </div>
                <!--  border: 1px solid #ccc;margin-left:20px;margin: 20px 0; -->
            </div>
        </div>
    </div>

}

